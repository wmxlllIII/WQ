<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_bg"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_title_margin"
            android:paddingHorizontal="@dimen/common_title_pad_hori"
            android:paddingVertical="@dimen/common_title_vert"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/common_back_size"
                android:layout_height="@dimen/common_back_size"
                android:src="@mipmap/icon_back_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/white_80"
                android:textSize="@dimen/common_medium_font_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_content_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_title_margin"
            android:paddingHorizontal="@dimen/common_title_pad_hori"
            android:paddingVertical="@dimen/common_title_vert"
            app:layout_constraintTop_toBottomOf="@id/cl_title_zone">

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入邮箱"
                android:textColorHint="@color/white"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_register_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColorHint="@color/white"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10sp"
                app:layout_constraintTop_toBottomOf="@id/et_register_email" />

            <EditText
                android:id="@+id/et_register_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                android:textColorHint="@color/white"
                android:paddingHorizontal="20sp"
                android:paddingVertical="10sp"
                app:layout_constraintTop_toBottomOf="@id/et_register_pwd1" />

            <LinearLayout
                android:id="@+id/ll_code_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/et_register_pwd2">

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="9"
                    android:textColorHint="@color/white"
                    android:hint="请输入验证码" />

                <Button
                    android:id="@+id/btn_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:text="获取验证码" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_go_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="立即注册"
                android:textColor="@color/on_login_container"
                app:layout_constraintTop_toBottomOf="@id/ll_code_zone" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>