<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_qrcode"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="#0ff00f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/iv_qrcode"
            app:layout_constraintEnd_toEndOf="@id/iv_qrcode"
            app:layout_constraintTop_toBottomOf="@id/iv_qrcode"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/tv_qr_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="WQID: "/>

            <TextView
                android:id="@+id/tv_uunum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="98461546"
                android:drawableEnd="@mipmap/icon_edit"
                android:singleLine="true"
                android:ellipsize="end"/>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>