<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp">

        <ImageView
            android:id="@+id/iv_friend_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_t2" />

        <ImageView
            android:id="@+id/iv_online_state"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignEnd="@id/iv_friend_avatar"
            android:layout_alignBottom="@id/iv_friend_avatar"
            android:background="@drawable/bg_item_online"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_friend_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_friend_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:paddingVertical="5dp"
            android:text="nickname"
            android:textColor="#D5D4D4" />

    </RelativeLayout>
</layout>