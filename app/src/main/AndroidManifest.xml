<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.memory.wq">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".provider.WqApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WQ">

        <provider
            android:name="com.memory.wq.provider.MsgProvider"
            android:authorities="com.memory.wq.provider.MsgProvider"
            android:exported="false" />

        <provider
            android:name="com.memory.wq.provider.FriendProvider"
            android:authorities="com.memory.wq.provider.FriendProvider"
            android:exported="false" />

        <activity
            android:name=".activities.PostDetailActivity"
            android:exported="false"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.UploadPostActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.LoginWithEmailActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.PersonalActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.PortraitCaptureActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.SearchMovieActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AudioActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:screenOrientation="user"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.ChatActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.SearchUserActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.MyQrCodeActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.FriendRelaActivity"
            android:exported="true"
            android:launchMode="singleTask"/>

        <service
            android:name=".service.WebService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activities.ProfileActivity"
            android:exported="true"
            android:launchMode="singleTask"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.memory.wq.albumprovider"
            android:enabled="true"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.AvatarActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.LaunchActivity"
            android:exported="true"
            android:launchMode="singleTask"/>
        <activity
            android:name=".activities.BaseActivity"
            android:exported="true"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>